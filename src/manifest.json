{
  "manifest_version": 2,
  "name":"Kambani",
  "description": "A Factom adresses and identity management system in your browser.",
  "version": "0.1.1",
  "permissions": [
    "activeTab",
    "notifications",
    "storage"
  ],
  "browser_action": {
    "default_title": "Kambani",
    "default_popup": "index.html"
  },
  "background": {
    "scripts": ["background.js"]
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": ["signerContentScript.js"],
      "run_at": "document_start"
    },
    {
      "matches": [
        "http://localhost/*",
        "https://factomatic.io/*"
      ],
      "js": ["factomAddressesContentScript.js"],
      "run_at": "document_start"
    }
  ],
  "permissions": [
    "storage",
    "unlimitedStorage",
    "clipboardWrite",
    "notifications",
    "https://testnet-api.factomatic.io/write-did"
  ],
  "icons": {
    "16": "assets/kambani-logo.png",
    "48": "assets/kambani-logo.png",
    "128": "assets/kambani-logo.png"
  }
}
