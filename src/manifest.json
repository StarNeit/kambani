{
  "manifest_version": 2,
  "name":"Kambani",
  "version": "0.1.0",
  "permissions": [
    "activeTab",
    "notifications",
    "storage"
  ],
  "browser_action": {
    "default_title": "Kambani",
    "default_popup": "index.html"
  },
  "background": {
    "scripts": ["background.js"]
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": ["signerContentScript.js"],
      "run_at": "document_start"
    },
    {
      "matches": [
        "<all_urls>"
      ],
      "js": ["factomAddressesContentScript.js"],
      "run_at": "document_start"
    }
  ],
  "icons": {
    "16": "assets/web-signer-logo.png",
    "48": "assets/web-signer-logo.png",
    "128": "assets/web-signer-logo.png"
  }
}
