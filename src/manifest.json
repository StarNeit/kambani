{
  "manifest_version": 2,
  "name":"Web Signer Extension",
  "version": "1.0.0",
  "permissions": [
    "notifications"
  ],
  "browser_action": {
    "default_title": "Web Signer",
    "default_popup": "index.html"
  },
  "background": {
    "scripts": ["background.js"]
  },
  "externally_connectable": {
    "matches": ["http://localhost/*"]
  },
  "icons": {
    "16": "assets/web-signer-logo.png",
    "48": "assets/web-signer-logo.png",
    "128": "assets/web-signer-logo.png"
  },
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}